<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll_decor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="-126dp"
    >

    <!--顶部栏-->
    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:translationZ="@dimen/dp_2"
        android:elevation="@dimen/dp_1"
        >
        <LinearLayout
            android:id="@+id/llLeft"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_49"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/imgLeft"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_49"
                android:padding="@dimen/dp_9"
                android:maxWidth="@dimen/dp_10"
                android:maxHeight="@dimen/dp_49"
                />
            <TextView
                android:gravity="center"
                android:id="@+id/tvLeft"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_49"
                android:text="返回"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_49"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:id="@+id/llRight"
            android:gravity="center"
            >
            <TextView
                android:gravity="center"
                android:id="@+id/tvRight"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_49"
                android:text="返回"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/imgRight1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_49"
                android:padding="@dimen/dp_9"
                android:maxWidth="@dimen/dp_10"
                android:maxHeight="@dimen/dp_49"
                />
            <ImageView
                android:id="@+id/imgRight"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_49"
                android:padding="@dimen/dp_9"
                android:maxWidth="@dimen/dp_10"
                android:maxHeight="@dimen/dp_49"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_toLeftOf="@id/llRight"
            android:layout_toRightOf="@id/llLeft"
            android:gravity="center"
            android:text="我是标题"
            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlTop"
        ></FrameLayout>


</RelativeLayout>