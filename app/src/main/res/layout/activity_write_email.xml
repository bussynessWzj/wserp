<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="@string/write_email_receiver"
            android:textColor="@color/contact_type_text"
            android:textSize="@dimen/sp_15"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:hint="13100673148"
            android:textColor="@color/contact_type_edit"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_54"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cabinet_list_line"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="@string/write_email_copyto"
            android:textColor="@color/contact_type_text"
            android:textSize="@dimen/sp_15"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:hint="13100673148"
            android:textColor="@color/contact_type_edit"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_54"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cabinet_list_line"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="@string/write_email_theme"
            android:textColor="@color/contact_type_text"
            android:textSize="@dimen/sp_15"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:hint="13100673148"
            android:textColor="@color/contact_type_edit"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_54"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cabinet_list_line"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tvAttachment"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="@string/write_email_attachment"
            android:textColor="@color/contact_type_text"
            android:textSize="@dimen/sp_15"
            android:layout_alignParentLeft="true"
            />
        <EditText
            android:id="@+id/etAttachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:hint="13100673148"
            android:textColor="@color/main_checked"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_54"
            android:layout_toRightOf="@id/tvAttachment"
            android:textColorHint="@color/main_checked"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+添加"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="@color/main_checked"
            android:background="@color/work_status_bg"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cabinet_list_line"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write_email_body_content"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_15"
        android:textColor="@color/contact_type_text"
        />
    <EditText
        android:paddingLeft="@dimen/dp_15"
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="输入内容"
        android:gravity="top|left"
        />
</LinearLayout>